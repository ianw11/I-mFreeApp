<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
   <item android:state_pressed="true" >
       <shape>
           <solid
               android:color="@color/postPressed" />
           <corners
               android:radius="5dp" />
           <padding
               android:left="10dp"
               android:top="10dp"
               android:right="10dp"
               android:bottom="10dp" />
       </shape>
   </item>
	<item>
	    <shape>
	        <gradient
	            android:angle="270"
	            android:startColor="@color/postLight"
	            android:endColor="@color/postBase"
	            android:type="linear" />
	        <corners
                android:radius="5dp" />
	    </shape>
	</item>
</selector>